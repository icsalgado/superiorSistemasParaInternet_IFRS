	*ptr=0;
	//ptr=0; ERRADO!!!
}

void troca(int *a, int *b){
	int aux = *a;
	*a = *b;
	*b = aux;}
int x=1, y=0;
troca(&x,&y);
if(y==1 && x==0) OK; ERRO;	
	
	
void atribui(int *ptr, int valor){*ptr=valor; 
	//ptr=valor;ERRADO!!!
}
int x=1;
atribui(&x,1000);
if(x==1000) OK; ERRO;


int maior (int x, int y, int z){
	int resp = x;
	if(resp < y) resp=y;
	if(resp < z) resp=z;
	return resp;
}
if(maior(1,2,3)==3) printf("OK"); printf("ERRO");
if(maior(-1,-2,3)==3) printf("OK"); printf("ERRO");
if(maior(1,3,2)==3) printf("OK"); printf("ERRO");
if(maior(1,2,-3)==2) printf("OK"); printf("ERRO");

int *PtrMaior(int *x, int *y, int *z){
	int *resp;
	resp = x;
	if(*resp < *y) resp=y;
	if(*resp < *z) resp=z;
	return resp;
}
int x=1;
int y=2;
int z=3;
if(ptrMaior(&x,&y,&z)==&z) OK; ERRO;


/**a - Crie um programa que leia 4 variáveis int, informe o endereço e o conteúdo 
 * de cada uma delas

b- Crie uma função que recebe dois ponteiros inteiros como parâmetros e devolva 
a media aritmética dos conteúdos apontados (float); (fazer a média dos numeros, 
não dos endereços)

c - Crie uma função que receba como parâmetro 3 ponteiros variáveis inteiras e 
devolva o maior valor (maior conteúdo, não o maior endereço);

d - Crie uma função que receba como parâmetro 3 ponteiros para inteiro e devolva 
o endereço que aponta para a variável de maior valor; (importante: quero o endereço
do maior valor, não o maior endereço...)*/

#include <stdio.h>

float media(int* x, int* y){
    return (*x+*y)/2.0;
}

int maiorValor(int *x, int* y, int * z){
    int maior = *x;
    if(*y>maior) maior=*y;
    if(*z>maior) maior=*z;
    return maior;
}

int* enderecoDoMaior(int *x, int* y, int * z){
    int *resp;
    resp = x;
    if(*resp<*y) resp=y;
    if(*resp<*z) resp=z;
    return resp;
}

int main(){
    int a, b, c, d;
    printf("Digite o valor de a:");
    scanf("%d",&a);
    printf("Digite o valor de b:");
    scanf("%d",&b);
    printf("Digite o valor de c:");
    scanf("%d",&c);
    printf("Digite o valor de d:");
    scanf("%d",&d);
    printf("\nValor de a: %d - Endereco: %p\n",a,&a);
    printf("Valor de b: %d - Endereco: %p\n",b,&b);
    printf("Valor de c: %d - Endereco: %p\n",c,&c);
    printf("Valor de d: %d - Endereco: %p\n",d,&d);
    printf("\nitem b - Media de a e b: %f\n",media(&a,&b));
    printf("\nitem c - Maior entre a, b e c: %d\n",maiorValor(&a,&b,&c));
    printf("\nitem d - Endereco do Maior entre a, b e c: %p\n",enderecoDoMaior(&a,&b,&c));
}
